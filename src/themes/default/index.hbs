<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/main.css" />
    <title>{{ title }}</title>
  </head>
  <body class="{{ bodyClass }}" >
    <div class="container">
      <header>
        <ul class="nav">
         {{#each collections.pages}}
            <li>
                <a class="menu-item-link" href="{{this.data.page.url}}">{{this.data.title}}</a>
            </li>
        {{/each}}
        </ul>
        <h1>{{ title }}</h1>
        {{#if subtitle}}<p class="subtitle">{{ subtitle }}</p>{{/if}}
      </header>
      {{{ content }}}
    </div>
  </body>
</html>

